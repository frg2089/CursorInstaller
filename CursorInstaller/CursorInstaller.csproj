<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFrameworks>net48;net8.0-windows10.0.22621.0</TargetFrameworks>
    <TargetPlatformMinVersion>7.0</TargetPlatformMinVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>true</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <LangVersion>12</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.2.2" />
    <PackageReference Include="MicaWPF" Version="6.2.7" />
  </ItemGroup>

  <ItemGroup>
    <None Update="cursors\**\*" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

</Project>
